<table width="100%" cellpadding="0" cellspacing="0" style="font-family: Arial, Helvetica, sans-serif;">
  <tr>
    <td align="center">

      <!-- INVOICE BOX -->
      <table width="600" cellpadding="10" cellspacing="0" style="border:1px solid #999;">

        <!-- HEADER -->
        <tr>
          <td align="center" style="font-size:20px; font-weight:bold; border-bottom:1px solid #999;">
            INVOICE
          </td>
        </tr>

        <!-- CUSTOMER INFO -->
        <tr>
          <td>
            <strong>Customer Name:</strong> <%= @bill.customer.name %><br>
            <strong>Email:</strong> <%= @bill.customer.email %><br>
            <strong>Bill ID:</strong> <%= @bill.id %>
          </td>
        </tr>

        <!-- ITEMS TABLE -->
        <tr>
          <td>
            <table width="100%" cellpadding="8" cellspacing="0" style="border-collapse:collapse;">
              <tr>
                <th align="left" style="border-bottom:1px solid #000;">Product</th>
                <th align="center" style="border-bottom:1px solid #000;">Quantity</th>
                <th align="right" style="border-bottom:1px solid #000;">Total Price</th>
              </tr>

              <% @bill.bill_items.each do |item| %>
                <tr>
                  <td><%= item.product.name %></td>
                  <td align="center"><%= item.quantity %></td>
                  <td align="right"><%= number_to_currency(item.total_price) %></td>
                </tr>
              <% end %>
            </table>
          </td>
        </tr>

        <!-- TOTALS -->
        <tr>
          <td align="right">
            <p><strong>Total Price:</strong> <%= number_to_currency(@bill.total_price) %></p>
            <p><strong>Net Price:</strong> <%= number_to_currency(@bill.net_price) %></p>
          </td>
        </tr>

        <!-- FOOTER -->
        <tr>
          <td align="center" style="border-top:1px solid #999;">
            Thank you for your purchase.
          </td>
        </tr>

      </table>

    </td>
  </tr>
</table>
